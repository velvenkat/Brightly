<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#c1c1c1">


    <RelativeLayout
        android:id="@+id/contr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_hdr"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/txt_see_all"
            android:text="Recent Category"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_see_all"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_hdr"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="See All"
            android:textColor="#ee0090" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid_chl_itms"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_hdr"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="#00ffffff"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"

            android:visibility="visible">


        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <View
        android:id="@+id/view_dummy"
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:layout_below="@+id/contr"
        android:background="#00ffffff"></View>

</RelativeLayout>