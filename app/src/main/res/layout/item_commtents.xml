<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVw_card_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_8"
    android:layout_marginTop="@dimen/dimen_8"
    android:layout_marginRight="@dimen/dimen_8"
    android:layout_marginBottom="@dimen/dimen_2"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dimen_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_2">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_comtd_date"
            android:text="DAYS"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/text_comment_by"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/txt_comtd_date"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_alignParentLeft="true"
            android:lines="1"
            android:maxLines="1"
            android:text="No data Available"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumtextsize"

            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_comment_by"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_8"
            android:lines="2"
            android:maxLines="2"
            android:text="No data Available"
            android:textColor="@color/black"

            android:textSize="@dimen/smalltextSize"
            android:visibility="visible" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
