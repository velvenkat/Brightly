<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtHintReorder"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_4"
        android:drawablePadding="@dimen/dimen_6"
        android:drawableRight="@mipmap/ic_drag_drop"
        android:text="Drag and Drop to Reorder"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/action_bar"

        android:layout_below="@+id/txtHintReorder"
        android:id="@+id/set_del_contr"
        android:visibility="gone"

        android:layout_height="50dp">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtCntSelected"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/btn_cancel"
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_delete"
            android:text="Delete"
            android:textColor="#FF9900"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!--<ImageView
        android:id="@+id/view_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="50dp"
        android:src="@drawable/ic_no_datafound"/>-->

    <TextView
        android:id="@+id/view_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/no_sets_available"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20"
        android:visibility="gone"
        />
     <CheckBox
         android:layout_width="wrap_content"
         android:id="@+id/chk_sel_all"
         android:layout_alignParentRight="true"
         android:text="Select All"
         android:visibility="gone"
         android:layout_below="@+id/set_del_contr"
         android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chk_sel_all">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelSet_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_100"
        android:nestedScrollingEnabled="false"/>

    </ScrollView>


    <ImageView
        android:id="@+id/image_createChannelSet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/circular_image_drawable"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/add_image_white"/>



</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>