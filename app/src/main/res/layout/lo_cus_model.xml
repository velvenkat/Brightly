<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCatg_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Category"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:layout_toRightOf="@+id/txtCatg_label"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:id="@+id/edt_catg_label"
        android:layout_height="50dp" />
    <TextView

        android:layout_width="80dp"
        android:id="@+id/txtSet_label"
        android:layout_below="@+id/edt_catg_label"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="Set"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_toRightOf="@+id/txtSet_label"
        android:layout_width="match_parent"
        android:id="@+id/edt_set_label"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background"
        android:layout_below="@+id/edt_catg_label"
        android:layout_height="50dp" />
</RelativeLayout>