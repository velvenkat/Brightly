<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dimen_2"
    app:cardCornerRadius="@dimen/dimen_2"
    android:layout_marginTop="@dimen/dimen_1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="@dimen/dimen_4"
       >

        <!--<TextView
            android:id="@+id/text_sharedNumber"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Number"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumtextsize"
            android:visibility="visible"
            />-->

        <TextView
            android:id="@+id/text_sharedName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Name"
            android:layout_marginLeft="@dimen/dimen_4"
            android:maxLines="1"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumtextsize"
            android:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/layout_share_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/dimen_4"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/slcted_share_access"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pencil_edit_button"
                />
            <ImageView
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:layout_marginTop="@dimen/dimen_2"
                android:src="@drawable/drop_down_arrow"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/active_user"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/inactive_user"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/holo_red_dark"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/revoke_shared"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_gravity="center_vertical"
            android:src="@drawable/delete_cross_icon"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/inactive_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/app_link"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:text="App Link"
            android:textSize="@dimen/nanotextSize"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_light"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/web_link"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_4"
            android:textSize="@dimen/nanotextSize"
            android:background="@android:color/holo_green_light"
            android:text="Web Link"
            />

    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
